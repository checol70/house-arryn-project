<section class="hero">
  <nav class="navbar has-shadow has-fixed-top">
    <div class="container">
      <div class="navbar-brand">
        <a class="navbar-item" href="">
          <i class="fas fa-utensils"></i>
          Recipes</a>

      </div>
    </div>
    <div class="navbar-end">
      <div class="navbar-item">
        <span>
          <a href="/">Home </a>
        </span>

      </div>
    </div>

  </nav>

  <div class="hero-body">
    <div class="container">

      <br> {{!-- Object received from the get/code { ingredientArr:[ ingredients ] stepArr:[ // this is full of strings in order.
      ], name://string for the recipe name. originalUser: // int for the users array } --}}

      <ul>
        {{#each recipes}}
        <br>

        <i class="fas fa-utensils"></i>

        <div class="recipeName">
          <p>
            {{name}}
          </p>
        </div>


        <p> Ingredients</p>
        {{#each ingredientArr}}
        <p>
          {{this}}
        </p>
        {{/each}}
        <br>
        <p>Steps......</p>
        {{#each stepArr}}
        <p>{{this}}</p>
        {{/each}} {{/each}}
      </ul>

    </div>
  </div>
</section>